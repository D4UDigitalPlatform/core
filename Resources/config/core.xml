<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="itkg_core.config.class">Itkg\Core\Config</parameter>
    </parameters>
    <services>
        <service id="itkg_core.config" class="%itkg_core.config.class%" public="true" />
        <service id="itkg_core.event_dispatcher" class="Symfony\Component\EventDispatcher\EventDispatcher" />

        <service id="event_dispatcher" alias="itkg_core.event_dispatcher" />
    </services>
</container>